@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<TickTock.Dashboard.Models.Jobs.NewModel>

@{
    Layout = "Layout.cshtml";
}

@section Content
{
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">New job</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="name" name="name" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="description" name="description" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="executable" name="executable" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="arguments" name="arguments" />
                            </div>
                            <div class="form-group">
                                <input type="file" class="form-control" placeholder="blob" name="blob"/>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Create</button>
                                <button type="button" class="btn">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
